<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/padding_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/padding_top_bottom</item>
    </style>
    
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextViewRight" parent="TextView">
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_dividerView</item>
        <item name="android:background">@color/textGrey</item>
    </style>

</resources>
